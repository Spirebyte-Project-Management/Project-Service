{
  "app": {
    "name": "Spirebyte Projects Service",
    "version": "1"
  },
  "consul": {
    "enabled": true,
    "url": "http://consul:8500",
    "service": "projects-service",
    "address": "projects-service",
    "port": "80"
  },
  "fabio": {
    "enabled": true,
    "url": "http://fabio:9999",
    "service": "projects-service"
  },
  "httpClient": {
    "type": "fabio",
    "retries": 3,
    "services": {
      "identity": "identity-service"
    }
  },
  "jwt": {
    "certificate": {
      "location": "",
      "password": "",
      "rawData": ""
    },
    "issuerSigningKey": "eiquief5phee9pazo0Faegaez9gohThailiur5woy2befiech1oarai4aiLi6ahVecah3ie9Aiz6Peij",
    "expiryMinutes": 60,
    "issuer": "spirebyte",
    "validateAudience": false,
    "validateIssuer": false,
    "validateLifetime": true,
    "allowAnonymousEndpoints": [ "/sign-in", "/sign-up" ]
  },
  "logger": {
    "console": {
      "enabled": true
    },
    "elk": {
      "enabled": false,
      "url": "http://elk:9200"
    },
    "file": {
      "enabled": false,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://seq:5341",
      "apiKey": "secret"
    }
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "projects",
    "udpHost": "jaeger",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const",
    "excludePaths": [ "/", "/ping", "/metrics" ]
  },
  "mongo": {
    "connectionString": "mongodb://mongo:27017",
    "database": "projects-service",
    "seed": false
  },
  "rabbitMq": {
    "hostnames": [
      "rabbitmq"
    ]
  },
  "redis": {
    "connectionString": "redis",
    "instance": "projects:"
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "v1",
    "title": "API",
    "version": "v1",
    "routePrefix": "docs",
    "includeSecurity": true
  },
  "vault": {
    "enabled": false,
    "url": "http://vault:8200",
    "kv": {
      "enabled": false
    },
    "pki": {
      "enabled": false
    },
    "lease": {
      "mongo": {
        "enabled": false
      }
    }
  }
}