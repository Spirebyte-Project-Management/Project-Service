{
  "app": {
    "name": "Spirebyte projects-service",
    "version": "1",
    "project": "Spirebyte"
  },
  "auth": {
    "certificate": {
      "location": "Certs/localhost.cer"
    },
    "jwt": {
      "validIssuer": "https://sts.spirebyte.nl",
      "validAudience": "spirebyte",
      "validateAudience": true,
      "validateIssuer": true,
      "validateLifetime": true
    }
  },
  "consul": {
    "enabled": true,
    "url": "http://localhost:8500",
    "service": {
      "name": "projects-service",
      "url": "http://host.docker.internal:5001"
    },
    "healthCheck": {
      "endpoint": "ping",
      "interval": "00.00:00:05",
      "deregisterInterval": "00.00:00:05"
    }
  },
  "cors": {
    "enabled": true,
    "allowCredentials": true,
    "allowedOrigins": [
      "http://localhost:4200",
      "http://localhost:4201",
      "http://localhost:5000",
      "http://localhost:5001",
      "https://web.spirebyte.nl",
      "https://test.spirebyte.nl",
      "https://www.spirebyte.nl",
      "https://admin.spirebyte.nl",
      "http://192.168.2.25:4200",
      "http://192.168.2.25:4201"
    ],
    "allowedMethods": [
      "POST",
      "PUT",
      "DELETE"
    ],
    "allowedHeaders": [
      "Content-Type",
      "Authorization"
    ],
    "exposedHeaders": [
      "Resource-ID"
    ]
  },
  "httpClient": {
    "name": "",
    "type": "consul",
    "certificate": {
      "location": "Certs/localhost.pfx",
      "password": "test"
    },
    "resiliency": {
      "retries": 3,
      "retryInterval": "00.00:00:03",
      "exponential": false
    },
    "requestMasking": {
      "enabled": false,
      "urlParts": [
        "secret"
      ],
      "maskTemplate": "*****"
    },
    "services": {
      "identity": "http://identity-service:5004"
    }
  },
  "messaging": {
    "resiliency": {
      "retries": 3,
      "retryInterval": "00.00:00:03",
      "exponential": false
    }
  },
  "metrics": {
    "enabled": true,
    "endpoint": "/metrics",
    "exporter": "prometheus"
  },
  "rabbitMQ": {
    "enabled": true,
    "connectionString": "host=localhost;port=5672;virtualHost=/;username=guest;password=guest"
  },
  "security": {
    "encryption": {
      "key": "SsAGentgn5E9vQRt3XcrcDXY9ZYqFVLw"
    }
  },
  "serilog": {
    "level": "information",
    "overrides": {
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    },
    "excludePaths": [
      "/",
      "/metrics",
      "/ping"
    ],
    "excludeProperties": [
      "api_key",
      "access_key",
      "password",
      "email"
    ],
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": false,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "apiKey": "secret"
    },
    "tags": {}
  },
  "swagger": {
    "enabled": true,
    "title": "projects API",
    "version": "v1",
    "route": "swagger"
  },
  "tracing": {
    "enabled": true,
    "exporter": "jaeger",
    "jaeger": {
      "agentHost": "localhost",
      "agentPort": 6831,
      "maxPayloadSizeInBytes": null,
      "exportProcessorType": "batch"
    }
  },
  "mongo": {
    "enabled": true,
    "connectionString": "mongodb://root:4UeQAJgTqbCwjPCH@localhost:27017/?authSource=admin",
    "database": "spirebyte-projects-service",
    "seed": false
  },
  "vault": {
    "enabled": false,
    "url": "http://localhost:8200",
    "authentication": {
      "type": "token",
      "token": {
        "token": "secret"
      }
    },
    "KV": {
      "enabled": true,
      "path": "projects-service"
    },
    "PKI": {
      "enabled": true,
      "roleName": "projects-service",
      "commonName": "projects-service.spirebyte.io",
      "importPrivateKey": true,
      "httpHandler": {
        "enabled": true,
        "certificate": "projects-service"
      }
    },
    "lease": {
      "mongo": {
        "enabled": true,
        "type": "database",
        "roleName": "projects-service",
        "templates": {
          "connectionString": "mongodb://{{username}}:{{password}}@localhost:27017"
        }
      }
    }
  },
  "s3": {
    "enabled": false,
    "url": "storage.spirebyte.nl",
    "accessKey": "a6qqJrzRsKXyCWBBAiTX",
    "secretKey": "FUszZfph3AqHRdB3kOwh",
    "containerName": "projects"
  }
}
